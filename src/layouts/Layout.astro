---
import Frame from "../components/Frame.astro";
import "@fontsource/lato/400.css";
import "@fontsource/lato/900.css";
import "@fontsource/bitter";
import WelcomeAnimation from "../components/WelcomeAnimation";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <meta
      name="description"
      content="Agustin Benvenuto, software engineer student portfolio, showing some web projects and contact information."
    />
    <meta
      name="keywords"
      content="software engineer, frontend developer,developer, frontend, portfolio, projects, web development, react, astro, tailwind"
    />
    <meta name="author" content="Agustin Benvenuto" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="title" content="Agustin Benvenuto | Portfolio" />
    <meta name="canonical" content="https://abenve.ar" />
    <meta property="og:title" content="Agustin Benvenuto | Portfolio" />
    <meta
      property="og:description"
      content="Agustin Benvenuto, software engineer student portfolio, showing some web projects and contact information."
    />
    <meta property="og:image" content="https://abenve.ar/og_image.jpg" />
    <meta property="og:image:alt" content="Agustin Benvenuto | Portfolio" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:url" content="https://abenve.ar" />
    <meta property="og:type" content="website" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@ByBenve" />
    <meta name="twitter:title" content="Agustin Benvenuto | Portfolio" />
    <meta property="twitter:image:type" content="image/jpeg" />
    <meta
      name="twitter:description"
      content="Agustin Benvenuto, software engineer student portfolio showing some web projects and contact information."
    />
    <meta name="twitter:image" content="https://abenve.ar/og_image.jpg" />
    <meta name="twitter:image:alt" content="Agustin Benvenuto | Portfolio" />
    <meta property="twitter:image:width" content="1200" />
    <meta property="twitter:image:height" content="630" />

    <link rel="preconnect" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <link
      rel="apple-touch-icon-precomposed"
      sizes="57x57"
      href="apple-touch-icon-57x57.png"
    />
    <link
      rel="apple-touch-icon-precomposed"
      sizes="114x114"
      href="apple-touch-icon-114x114.png"
    />
    <link
      rel="apple-touch-icon-precomposed"
      sizes="72x72"
      href="apple-touch-icon-72x72.png"
    />
    <link
      rel="apple-touch-icon-precomposed"
      sizes="144x144"
      href="apple-touch-icon-144x144.png"
    />
    <link
      rel="apple-touch-icon-precomposed"
      sizes="60x60"
      href="apple-touch-icon-60x60.png"
    />
    <link
      rel="apple-touch-icon-precomposed"
      sizes="120x120"
      href="apple-touch-icon-120x120.png"
    />
    <link
      rel="apple-touch-icon-precomposed"
      sizes="76x76"
      href="apple-touch-icon-76x76.png"
    />
    <link
      rel="apple-touch-icon-precomposed"
      sizes="152x152"
      href="apple-touch-icon-152x152.png"
    />
    <link
      rel="icon"
      type="image/png"
      href="favicon-196x196.png"
      sizes="196x196"
    />
    <link rel="icon" type="image/png" href="favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/png" href="favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="favicon-16x16.png" sizes="16x16" />
    <link rel="icon" type="image/png" href="favicon-128.png" sizes="128x128" />
    <meta name="application-name" content="Â " />
    <meta name="msapplication-TileColor" content="#FFFFFF" />
    <meta name="msapplication-TileImage" content="mstile-144x144.png" />
    <meta name="msapplication-square70x70logo" content="mstile-70x70.png" />
    <meta name="msapplication-square150x150logo" content="mstile-150x150.png" />
    <meta name="msapplication-wide310x150logo" content="mstile-310x150.png" />
    <meta name="msapplication-square310x310logo" content="mstile-310x310.png" />

    <script>
      window.onbeforeunload = function () {
        window.scrollTo(0, 0);
      };
    </script></head
  >

  <body class="relative">
    <WelcomeAnimation client:load />
    <Frame>
      <slot />
    </Frame>
  </body>
</html>
<style is:global>
  html {
    background-color: #f6f6f6;
    margin: 0;
    padding: 0;
    height: 100%;
  }

  ::selection {
    background-color: #fff261;
    color: #222222;
  }

  ::-webkit-scrollbar {
    width: 4px;
    height: 4px;
  }
  /* Track */
  ::-webkit-scrollbar-track {
    border-radius: 100px;
  }

  /* Handle */
  ::-webkit-scrollbar-thumb {
    background: #7b61ff;
  }
</style>
